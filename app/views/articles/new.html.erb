<h3>New Article</h3>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :aurhor %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>
